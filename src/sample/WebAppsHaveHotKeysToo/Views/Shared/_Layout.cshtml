
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - A Sample by Michael Kennedy</title>
        <script src="~/scripts/modernizr-2.7.1.js" type="text/javascript"></script>
		
		<link href="@Url.Content("~/content/site.css")" rel="stylesheet" type="text/css" />

		<script type="text/javascript" src="@Url.Content("~/Scripts/jquery-2.1.0.min.js")"></script>
		<script type="text/javascript" src="@Url.Content("~/scripts/jquery.validate.min.js")"></script>
		<script type="text/javascript" src="@Url.Content("~/scripts/jquery.validate.unobtrusive.min.js")"></script>
		<script type="text/javascript" src="@Url.Content("~/js/jQuery.externalLinks-1.0.js")"></script>
		<script type="text/javascript" src="@Url.Content("~/js/jquery.hotkeys-1.0.js")"></script>
		<script type="text/javascript" src="@Url.Content("~/js/jQuery.hotKeyMap-1.0.js")"></script>
		<script type="text/javascript" src="@Url.Content("~/js/site.js")"></script>

		<meta name="viewport" content="width=device-width" />
		<style type="text/css">.navKey { }</style>
	</head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
					<p class="site-title"><a href="http://blog.michaelckennedy.net/">A Sample by Michael Kennedy</a></p>
                </div>
                <div class="float-right">
					<section id="login">
						<br/>				</section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
		<footer>
			<div class="content-wrapper">
				<div class="float-left">
					<p>&copy; @DateTime.Now.Year - <a href="http://blog.michaelckennedy.net/">Michael Kennedy</a></p>
				</div>
				<div class="float-right">
					<ul id="social">
						<li><a href="http://twitter.com/mkennedy" class="twitter">Twitter</a></li>
					</ul>
				</div>
			</div>
		</footer>

		<input type="hidden" id="homeKey" class="navKey" data-url="@Url.Content("~/")" data-key="h" />
		<input type="hidden" id="aboutKey" class="navKey" data-url="@Url.Content("~/home/about")" data-key="a" />
		<input type="hidden" id="contactKey" class="navKey" data-url="@Url.Content("~/home/contact")" data-key="c" />
	</body>
</html>
